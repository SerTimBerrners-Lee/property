FROM node:10-alpine
# Установим в качестве рабочей директории и добавим исходники:
ENV APP_ROOT /web
# Установим в качестве рабочей директории и добавим исходники:
WORKDIR ${APP_ROOT}
ADD . ${APP_ROOT}
# Устанавливаем зависимости и собираем приложение:
RUN npm ci
RUN npm run build
# И пишем команду запуска приложения внутри образа:
CMD ["npm", "run", "start"]